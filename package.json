{
  "name": "http-decorators",
  "author": "jarmee",
  "repository": "https://github.com/ngx-patterns/http-decorators",
  "keywords": [
    "decorators",
    "angular",
    "http",
    "http-client"
  ],
  "version": "0.0.0-alpha",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-ci": "ng build http --prod",
    "test-ci": "jest --coverage --runInBand --setupTestFrameworkScriptFile=./setUpJest.ts"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "@jarmee/schematics": "^1.1.0-alpha",
    "core-js": "^2.5.4",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^6.0.0",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular-devkit/build-angular": "~0.6.1",
    "ng-packagr": "^3.0.0-rc.2",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "typescript": "~2.7.2",
    "@angular/cli": "~6.0.1",
    "@angular/language-service": "^6.0.0",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "jest": "22.4.0",
    "jest-preset-angular": "5.2.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./setupJest.ts",
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/src/$1",
      "^app/(.*)": "<rootDir>/src/app/$1",
      "^assets/(.*)": "<rootDir>/src/assets/$1",
      "^environments/(.*)": "<rootDir>/src/environments/$1",
      "^@ngx-patterns/(.*)": "<rootDir>/projects/$1/src"
    }
  }
}
